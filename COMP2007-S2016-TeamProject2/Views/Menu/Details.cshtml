@using COMP2007_S2016_TeamProject2.Models
@model FoodItem

@{
    ViewBag.Title = "Album - " + Model.Title;
}
<h2>@Model.Title</h2>
<p>
    <img alt="@Model.Title"
         src="@Model.FoodItemLargeImageUrl" />
</p>
<div id="album-details">
    <p>
        <em>Food Type:</em>
        @Model.FoodType.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.FoodItemId }, "")
    </p>
</div>